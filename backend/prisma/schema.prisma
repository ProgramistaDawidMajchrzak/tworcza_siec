generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("client")
  purchases Purchase[]
  createdAt DateTime  @default(now())

  @@map("users")
}

model DigitalProduct {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  features        String[]
  previewImage    String
  demoUrl         String
  wordpressZipUrl String
  purchases       Purchase[]
  createdAt       DateTime  @default(now())
  type        String   @default("Strona Internetowa")
  visible        Boolean    @default(true)
  special        Boolean    @default(false)
  productCode    String     @default("TEMP_CODE") @unique

  financing     Json?

  @@map("digital_products")
}

model Purchase {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  product     DigitalProduct @relation(fields: [productId], references: [id])
  productId   Int
  purchasedAt DateTime  @default(now())

  @@map("purchases")
}